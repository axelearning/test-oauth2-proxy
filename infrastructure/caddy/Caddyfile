# OAuth2 Proxy Setup - Main Configuration
# This file orchestrates the entire setup with global config and imports

# Global configuration
{
	auto_https off
	log {
		output file /var/log/caddy/access.log {
			roll_size 100MiB
			roll_keep 5
		}
		format json
		level INFO
	}
}
import snippets.caddy
import sites/*.caddy